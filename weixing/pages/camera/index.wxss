/* {{page}}.wxss */
page {
  background: -webkit-linear-gradient(top,rgb(244,157,4),#FACF94,white);
}
.button-xunjian {
  height: 350rpx;
  width: 300rpx;
  border-radius: 5rpx;
  line-height: 300rpx;
  border-radius: 50%;
}

.page-section {
  height: 120rpx;
  width: 2800rpx;
  display: inline-block;
}

.notice-left-icon {
  height: 120rpx;
  width: 120rpx;
  display: inline-block;
}
.page-section .swiper-notice {
  height: 60px;
  width: calc(100% - (120rpx));
  display: inline-block;
}
.page-section .swiper-notice .swiper-item {
  height: 60px;
}


.function {
  width: 100%;
  background-color: #fff2f2;
  margin-top: 0rpx;
  overflow: hidden;
  display: flex;/**/
}

.whitedivide {/*白色分割线*/
  height: 1px;
  background-color: #ffffff;
  width: 56px;
  position:relative;
  top: 0px;
}

.graydivide {/*灰色分割条*/
  height: 10px;
  background-color: #ededed;
  position:relative;
  top: 0px;
}

.left-icon {
  display: flex;
  margin: 14px;
}

.icon-picture {/*图标*/
  display: flex;
  width: 28px;
  height: 28px;
}

.text {/*文字*/
  font-size: 17px;
  font-style: normal;
  font-weight: normal;
  width: 68px;
  position: relative;
  left: 0px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #000000;
}

.right-icon {/*右边图片*/
  display: flex;
  margin: 14px;
  position: absolute;
  right: 14px;
}